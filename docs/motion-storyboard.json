{
  "motion_storyboard": {
    "project": "JTKM.ch",
    "animation_library": "GSAP 3.12+ (recommended) or Framer Motion",
    "performance_target": "60fps",
    "global_principles": {
      "duration_range": "700-900ms for most reveals",
      "easing_preference": "ease-out (cubic-bezier(0.0, 0.0, 0.2, 1))",
      "stagger_timing": "100-150ms between elements",
      "threshold": "IntersectionObserver with 20-30% threshold",
      "lazy_loading": "All images and videos lazy-loaded",
      "reduced_motion": "Respects prefers-reduced-motion media query"
    },
    "sections": [
      {
        "section": "hero",
        "trigger": "page_load",
        "animations": [
          {
            "element": "svg_logo",
            "type": "path_drawing + scale",
            "sequence": [
              {
                "property": "stroke-dashoffset",
                "from": "100%",
                "to": "0%",
                "duration": "1800ms",
                "easing": "ease-out",
                "delay": "0ms"
              },
              {
                "property": "scale",
                "from": 0.8,
                "to": 1.0,
                "duration": "1800ms",
                "easing": "ease-out",
                "delay": "0ms",
                "note": "Runs simultaneously with path draw"
              },
              {
                "property": "opacity",
                "from": 0,
                "to": 1,
                "duration": "600ms",
                "easing": "ease-out",
                "delay": "0ms"
              }
            ],
            "mobile": "Same animation but duration 1200ms"
          },
          {
            "element": "h1_headline",
            "type": "word_stagger",
            "sequence": [
              {
                "property": "opacity",
                "from": 0,
                "to": 1,
                "duration": "700ms",
                "easing": "ease-out",
                "stagger": "100ms per word",
                "delay": "900ms (after logo 50% complete)"
              },
              {
                "property": "translateY",
                "from": "40px",
                "to": "0px",
                "duration": "700ms",
                "easing": "ease-out",
                "stagger": "100ms per word",
                "delay": "900ms"
              }
            ],
            "mobile": "Reduce translateY to 20px, duration 500ms, stagger 60ms"
          },
          {
            "element": "h2_subheadline",
            "type": "fade_slide",
            "sequence": [
              {
                "property": "opacity",
                "from": 0,
                "to": 1,
                "duration": "800ms",
                "easing": "ease-out",
                "delay": "1400ms (200ms after h1 starts)"
              },
              {
                "property": "translateY",
                "from": "30px",
                "to": "0px",
                "duration": "800ms",
                "easing": "ease-out",
